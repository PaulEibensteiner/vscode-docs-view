{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "es2020",
		"lib": [
			"ES2020"
		],
		"outDir": "out",
		"sourceMap": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"rootDir": "src",
		"allowSyntheticDefaultImports": true,
		"typeRoots": [
			"./node_modules/@types",
			"./src"
		]
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	],
	"include": [
		"src"
	]
}